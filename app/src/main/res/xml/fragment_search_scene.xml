<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="200"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/searchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/radioGroup"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/searchView"
            motion:layout_constraintStart_toEndOf="parent"
            android:layout_marginTop="@dimen/vertical_margin" />

        <Constraint
            android:id="@+id/recentSearchTextView"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/radioGroup"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Constraint
            android:id="@+id/recent_search_divider"
            motion:layout_constraintStart_toStartOf="@id/placeholder"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@id/recentSearchTextView"
            motion:layout_constraintBottom_toBottomOf="@id/recentSearchTextView"
            android:layout_width="0dp"
            android:layout_height="0.5dp" />
        <Constraint
            android:id="@+id/placeholder"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/progress_bar"
            motion:visibilityMode="ignore"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/recycler_view"
            motion:layout_constraintTop_toBottomOf="@id/recentSearchTextView"
            motion:layout_constraintStart_toEndOf="@id/parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/searchView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/radioGroup"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/searchView"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/vertical_margin" />

        <Constraint
            android:id="@+id/recentSearchTextView"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/radioGroup"
            android:layout_marginTop="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Constraint
            android:id="@+id/recent_search_divider"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@id/recentSearchTextView"
            motion:layout_constraintBottom_toBottomOf="@id/recentSearchTextView"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            motion:layout_constraintStart_toEndOf="@+id/recentSearchTextView" />
        <Constraint
            android:id="@+id/progress_bar"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:visibilityMode="ignore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/recycler_view"
            motion:layout_constraintTop_toBottomOf="@id/recentSearchTextView"
            motion:layout_constraintStart_toStartOf="@id/recentSearchTextView"
            motion:layout_constraintEnd_toEndOf="@id/recent_search_divider"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </ConstraintSet>
</MotionScene>